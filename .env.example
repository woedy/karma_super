# Production Environment Variables for Coolify Deployment
ENVIRONMENT=production

# Database Configuration (SQLite for simplicity)
DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration (Coolify provides Redis service)
REDIS_URL=redis://redis:6379/0

# Django Secret Key (Generate a secure random key for production)
SECRET_KEY=your-super-secret-key-here-generate-random

# Django Settings
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Frontend Configuration (handled by nginx proxy, no need for VITE_API_URL)
# Email Configuration (if needed)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Other API Keys (add as needed)
# FCM_SERVER_KEY=your-fcm-key
# PUSHER_APP_ID=your-pusher-id
# GOOGLE_API_KEY=your-google-api-key
